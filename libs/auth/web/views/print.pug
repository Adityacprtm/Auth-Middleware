extends layout

block content
	nav.navbar.sticky-top.navbar-expand-lg.navbar-light.bg-light
		.container
			a.navbar-brand(href='/') Dashboard
	
	div.container(style='margin:20px auto')
		form.card.card-body.bg-light.shadow
			h3#page-header
				a.text-decoration-none List Accounts
			hr
			table.table.table-bordered.table-striped
				thead.thead-dark
					tr
						th(style='text-align:center') #
						th Name
						th Username
						th Email
						th Account Created
						th Role
				tbody
				- for (var i = 0; i < accts.length; i++)
					if accts[i].admin == true
						- role = "admin"
					else
						- role = "user"
					tr
						td(style='text-align:center')= i+1
						td= accts[i].name
						td= accts[i].user
						td= accts[i].email
						td= accts[i].date
						td
							input.btn-sm.btn-primary(type='button' disabled value=role)
							//input.btn-sm.btn-danger(type='button' value='delete' onclick="deleteRow(this)")
		br
		form.card.card-body.bg-light.shadow
			h3#page-header
				a.text-decoration-none List Devices
			hr
			table.table.table-bordered.table-striped
				thead.thead-dark
					tr
						th(style='text-align:center') #
						th User
						th Device Name
						th Role
						th Description
						th Device Created
				tbody
				- for (var i = 0; i < dvc.length; i++)
					- dvc.sort((a, b) => (a.user > b.user) ? 1 : -1)
					tr
						td(style='text-align:center')= i+1
						td= dvc[i].user
						td= dvc[i].device_name
						td= dvc[i].role
						td= dvc[i].description
						td= dvc[i].date

block scripts
	script(src='/js/controllers/printController.js')